<style>
  .container {
    width: 100% !important;
    height: 100% !important;
    top: 0;


  }

  #text {
    //Set to the bottom of the page
    display: flex;
    width: 100% !important;
    position: fixed;
    height: 3rem;
    bottom: 6rem;
    text-align: center;

  }

  .input {
    //Set to the bottom of the page
    display: flex;
    width: 100% !important;
    position: fixed;
    height: 3rem;
    bottom: 3rem;
  }

  #button {
    //Set to the bottom of the page
    display: flex;
    width: 25% !important;
    margin-top: 3rem;
    position: fixed;
    height: 3rem;
    bottom: 0;
  }

  #detect {
    //Set to the bottom of the page
    display: flex;
    width: 25% !important;
    margin-top: 3rem;
    left: 75%;
    position: fixed;
    height: 3rem;
    bottom: 0;
  }

  #languageSelector {
    //Set to the bottom of the page
    display: flex;
    width: 50% !important;
    left: 25%;
    margin-top: 3rem;
    position: fixed;
    height: 3rem;
    bottom: 0rem;
  }

  #textarea {
    //Set to the bottom of the page
    display: flex;
    width: 100% !important;
    position: fixed;
    top: 5rem;
    font-size: 2.5rem;

    border: 1px solid black;
    border-radius: 5px;
    box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
    color: black;
    background-color: white;
    text-align: center;
    font-family: 'Rubik Mono One', sans-serif;

  }

  .row,
  header {


    margin-top: 0rem !important;
    top: 5rem !important;
    text-align: center;
    font-size: 2.5rem;
    font-family: 'Rubik Mono One', sans-serif;
    color: red !important;


  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var textValue = document.getElementById("text");
    var button = document.getElementById("button");



    button.addEventListener("click", function() {
      var text = document.getElementById("text");
      // Clear the text
      translateText();

    });


    const translateText = () => {
      var textValue = document.getElementById("text").innerText;
      var textarea = document.getElementById("textarea");
      var url = "http://localhost:8080/API/translate";

      //**FETCH THE RESPONSE FROM THE API */
      fetch(url, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer p@ssW0rd", //+ localStorage.getItem("token") ,
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Headers": "Content-Type, Authorization",
            "Access-Control-Allow-Methods": "GET, POST, OPTIONS, PUT, PATCH, DELETE"
          },
          body: JSON.stringify({
            to: document.getElementById("languageSelector").value,
            text: textValue
          })

        })
        .then(response => response.json())
        .then(data => {
          console.log(data);
          textarea.innerHTML = data[0].translations[0].text
          var textInput = document.getElementById("input");
          // Clear the text
          textInput.innerText = "";
          textInput.value = "";



        })
        .catch(error => {
          alert("Error: " + error.message);
          console.log(error);
        });

    }



    /**
     * Detect the language of the text
     */
    var detect = document.getElementById("detect");
    detect.addEventListener("click", function() {
      var textValue = document.getElementById("text").innerText;
      var textarea = document.getElementById("textarea");
      var url = "http://localhost:8080/API/detect";

      //**FETCH THE RESPONSE FROM THE API */
      fetch(url, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer p@ssW0rd", //+ localStorage.getItem("token") ,
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Headers": "Content-Type, Authorization",
            "Access-Control-Allow-Methods": "GET, POST, OPTIONS, PUT, PATCH, DELETE"
          },
          body: JSON.stringify({
            text: textValue
          })

        })
        .then(response => response.json())
        .then(data => {
          console.log(data);


          textarea.innerHTML = ` <p> <span style="color:red">Language: </span>${data[0].language}  <span style="color:red">Confidence: </span> ${data[0].score} </p>`;



          var textInput = document.getElementById("input");
          // Clear the text
          textInput.innerText = "";


        })
        .catch(error => {
          alert("Error: " + error.message);
          console.log(error);
        });




    });

  });
</script>

<body>
  <!-- HEADER-->

  <header>
    <h1>
      <h1 class="text-center">Translate</h1>
      <div class="row">
        <div class="small-centered small-10 medium-8 large-6 columns">
