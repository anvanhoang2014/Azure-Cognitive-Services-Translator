  <!-- MAIN-->
  <main>
    <button class="button" style="background-color: rgb(32, 243, 173)" id="button">Translate</button>
    <button class="button" style="background-color: rgb(243, 169, 32)" id="detect">Detect Language</button>

    <div class="container">

      <p id="offscreen-text" class="offscreen-text"></p>
      <p id="text" class="text"></p>

